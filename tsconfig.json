{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "lib": ["es6"],
    "newLine": "LF",
    "noEmitHelpers": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    "baseUrl": ".",
    "paths": { "immutability-helper": ["."] }
  },
  "files": [
    "index.ts"
  ]
}

